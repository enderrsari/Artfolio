<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ender.artfolio.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addArtFragment"
            app:destination="@id/addArtFragment" />

    </fragment>
    <fragment
        android:id="@+id/addArtFragment"
        android:name="com.ender.artfolio.AddArtFragment"
        android:label="fragment_add_art"
        tools:layout="@layout/fragment_add_art" >
        <action
            android:id="@+id/action_addArtFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="isViewing"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="itemId"
            app:argType="string" />
    </fragment>
</navigation>